	.navbar-inner
		.container-fluid
				a(href='/').brand
				ul.nav.pull-right
					-if(session && session.user)
						li
							a(href='/project') Projects
						li.dropdown
							a.dropdown-toggle(href="#",data-toggle="dropdown") My Account
								b.caret
							ul.dropdown-menu
								li
									a(href='/user/settings').userSettingsLink Account Settings
								- if (settings.enableSubscriptions)
									li
										a(href='/user/subscription').subscriptionLink Subscription
								li.divider
								li
									a(href='/learn')#learnLink LaTeX Tutorial
								li
									a(href='/resources')#resourcesLink Resources
								li
									a(href='/help') Help
								li.divider
								li
									a(href='/logout').logoutLink Logout
					-else
						li
							a(href='/templates')#templatesLink Templates
